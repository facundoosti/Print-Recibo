.row
  %h3
    Consorcios
    %a.btn.btn-mini.btn-primary.pull-right{href: "/"} Atras
  %a.btn.btn-mini.btn-primary.pull-right{href: "/consorcios/new"} Nuevo Consorcio
  %br
  %hr
.row
  .col-md
    %table.table.table-hover
      %thead
        %tr
          %th{scope: 'col'} Nombre
          %th{scope: 'col'} Ciudad
          %th.text-center{scope: 'col'} Acciones
      %tboby
        - consorcios.each do |consorcio|
          %tr
            %td{scope: 'row'}= consorcio.nombre
            %td= consorcio.ciudad
            %td.text-center
              %ul.list-unstyled.list-inline
                %li
                  %a.btn.btn-success.fa.fa-pencil-square-o{href: "/consorcios/#{consorcio.id}/edit", title:'Editar'}
                %li
                  %form.btn-delete{method:"post", action:"/consorcios/#{consorcio.id}/delete", onsubmit:"return confirm('Seguro que desea borrar el registro?');"}
                    %input{ type:"hidden", name:"_method", value:"delete" }
                    %button.btn.btn-danger.btn-sm.fa.fa-trash-o{ title: 'Borrar',type:'submit' }
